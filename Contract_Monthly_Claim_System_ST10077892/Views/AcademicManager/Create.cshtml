@model Contract_Monthly_Claim_System_ST10077892.Models.AcademicManager

@{
    ViewData["Title"] = "Create Academic Manager";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-lg border-0">
        <div class="card-header bg-gradient-primary text-white text-center">
            <h2 class="mb-0">Create Academic Manager</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-bold"></label>
                    <input asp-for="UserID" class="form-control form-control-lg" placeholder="Enter User ID" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold"></label>
                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter Full Name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Department" class="form-label fw-bold"></label>
                    <input asp-for="Department" class="form-control form-control-lg" placeholder="Enter Department" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="RoleID" class="form-label fw-bold"></label>
                    <input asp-for="RoleID" class="form-control form-control-lg" placeholder="Enter Role ID" />
                    <span asp-validation-for="RoleID" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Create" class="btn btn-success btn-lg btn-hover" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="text-decoration-none">&larr; Back to List</a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(90deg, #007bff, #00c6ff);
    }

    .btn-hover:hover {
        transform: scale(1.05);
        transition: 0.3s;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .card {
        max-width: 600px;
        margin: auto;
    }

    h2 {
        font-weight: 700;
        letter-spacing: 1px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
