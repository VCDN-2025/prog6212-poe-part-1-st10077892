@model Contract_Monthly_Claim_System_ST10077892.Models.SupportingDocument

@{
    ViewData["Title"] = "Create Supporting Document";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 animate__animated animate__fadeInUp">
        <div class="card-body p-5">
            <h1 class="mb-4 text-center text-primary fw-bold animate__animated animate__fadeInDown">Add New Supporting Document 📂</h1>
            <h4 class="mb-3 text-center text-secondary">Fill in the document details below</h4>
            <hr />

            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="DocumentID" class="form-label fw-semibold"></label>
                            <input asp-for="DocumentID" class="form-control shadow-sm" placeholder="Enter Document ID" />
                            <span asp-validation-for="DocumentID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClaimID" class="form-label fw-semibold"></label>
                            <input asp-for="ClaimID" class="form-control shadow-sm" placeholder="Enter Claim ID" />
                            <span asp-validation-for="ClaimID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FilePath" class="form-label fw-semibold"></label>
                            <input asp-for="FilePath" class="form-control shadow-sm" placeholder="Enter File Path or upload URL" />
                            <span asp-validation-for="FilePath" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="UploadDate" class="form-label fw-semibold"></label>
                            <input asp-for="UploadDate" type="date" class="form-control shadow-sm" />
                            <span asp-validation-for="UploadDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Add Document" class="btn btn-primary btn-lg fw-bold shadow-sm" />
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="link-secondary text-decoration-underline">← Back to Documents List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Animate.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-control {
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 8px rgba(13, 110, 253, 0.25);
        }
</style>
